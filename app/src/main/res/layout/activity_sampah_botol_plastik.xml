<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E3F8E8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Botol Plastik Bekas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingBottom="16dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Botol Plastik Bekas"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botol Plastik Bekas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plastik adalah jenis sampah anorganik yang paling umum. Contohnya termasuk botol plastik, kantong plastik, wadah makanan plastik, bungkus plastik, mainan plastik, dan peralatan rumah tangga dari plastik."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 5.000/kg."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimal Penjualan:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 kg."
            android:textSize="14sp"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/buttonJualSampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jual Sampah"
            android:layout_gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</ScrollView>
