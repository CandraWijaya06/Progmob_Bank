<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Gaya untuk TextView besar -->
    <style name="LargeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Gaya untuk TextView sedang -->
    <style name="MediumTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Gaya untuk TextView kecil -->
    <style name="SmallTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
